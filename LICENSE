import random

def jogar_adivinhe_o_numero():
    print("---------------------------------------")
    print(" Bem-vindo ao Adivinhe o Número!      ")
    print("---------------------------------------")

    numero_secreto = random.randint(1, 100)
    tentativas = 0
    max_tentativas = 10

    print(f"\nEstou pensando em um número entre 1 e 100. Você tem {max_tentativas} tentativas.")

    while tentativas < max_tentativas:
        try:
            chute = int(input(f"Tentativa {tentativas + 1}/{max_tentativas}: Qual é o seu chute? "))
            tentativas += 1

            if chute < 1 or chute > 100:
                print("Por favor, chute um número entre 1 e 100.")
                continue

            if chute < numero_secreto:
                print("Muito baixo! Tente um número maior.")
            elif chute > numero_secreto:
                print("Muito alto! Tente um número menor.")
            else:
